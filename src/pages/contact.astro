import Layout from "../layouts/Layout.astro";
---

<Layout title="">
    <div class="mx-4 md:mx-16 md:flex md:flex-col md:justify-center">
       <div class="flex justify-center">
            <img 
                src="/images/bright_green_circle.png" 
                alt="datagrove logo" 
                class="w-48 my-8"
            />
        </div>

        <div class="flex flex-col items-center justify-center">
            <div class="flex justify-center items-center mb-6">
                <h3 class="text-dgBlue text-2xl font-semibold">
                    Reach us on 
                    <a 
                        href="https://twitter.com/datagrove_us" 
                        target="_blank"
                        class="text-accent pr-1"
                    >Twitter</a>
                </h3>
                <svg 
                    xmlns="http://www.w3.org/2000/svg" 
                    width="32" 
                    height="25.6" 
                    viewBox="0 0 1600 1280"
                    class="pl-1"
