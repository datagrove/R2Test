---
import Button from "../common/Button.astro";
---
<div>
    <div class="mx-4 md:mx-16 md:mt-32">
        <div class="my-6">
            <h1 class="text-3xl md:text-5xl text-dgPrimary dark:text-dgPrimaryDM font-bold py-2" set:html="Datagrove" />
            <h1 class="text-3xl md:text-5xl text-dgSecondary dark:text-dgSecondaryDM font-bold" set:html="Confident Data Sharing" />
        </div>

        <div class="flex flex-wrap md:mt-10">
            <Button text="Solutions" href={`${import.meta.env.BASE_URL}pawpaw`} type="primary" />
            <Button text="About Us" href={`${import.meta.env.BASE_URL}about`} type="secondary"/>
            <Button text="Connect" href={`${import.meta.env.BASE_URL}contact`} type="secondary" />
        </div>
    </div>
