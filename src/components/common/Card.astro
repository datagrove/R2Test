---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="bg-gray-50 rounded-lg p-6 mr-4 my-2 w-full md:w-2/3 lg:w-1/3">
	<a href={href}>
		<h2 class="py-1 text-dgGreen font-semibold">
			{title}
			<!-- <span>&rarr;</span> -->
		</h2>
		<p class="py-1 text-gray-500 text-sm">
			{body}
		</p>
	</a>
</div>
