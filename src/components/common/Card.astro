---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<div class="bg-gray-50 dark:bg-cardBackgroundDM rounded-lg p-6 mr-4 my-2 w-full md:w-2/3 lg:w-1/3">
	<a href={ href }>
		<h2 class="py-1 text-dgPrimary dark:text-dgPrimaryDM font-semibold">
			{ title }
		</h2>
		<p class="py-1 text-gray-500 dark:text-gray-400 text-sm">
			{ body }
		</p>
	</a>
</div>
