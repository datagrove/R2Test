---
interface Props {
    text: string;
    href: string;
    type?: string;
}

const { 
    text, 
    href, 
    type, 
} = Astro.props;
---

<div>
    <a
        href={ href }
    >
        <p 
            class={ type }
            set:html={ text } 
        />
    </a>
</div>

<style>
    .primary, .secondary {
        border-radius: 20px;
        width: 7em;
        margin-right: 12px;
        padding: 6px 12px 8px 12px;
        text-align: center;
        margin-bottom: 12px;
        
    }
    .primary {
        background-color: #435E1C;
        color: white;
    }
    .secondary {
        background-color: white;
        color: #435E1C;
        border: 1px solid #435E1C;
    }
    .primary:hover, .secondary:hover {
        background-color: #812458;
        color: white;
    }

    @media (prefers-color-scheme: dark) {
        .primary {
            background-color: #73A92F;
            border: solid 1px white;
        }
        .secondary {
            background-color: white;
            color: #73A92F;
            border: solid 1px #73A92F;
        }
        .primary:hover, .secondary:hover {
            background-color: #2FA9A2;
        }
    }
</style>